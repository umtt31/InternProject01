@model List<ProductListComponentViewModel>

<table class="table table-primary table-striped">

    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                        <th>@item.Name</th>
                        <th>@item.Description</th>
                    </tr>        
        }
    </tbody>

</table>
@{
    ViewData["Title"] = "Update";
}

@model Product

<h1>Update a Product</h1>
<hr />

<form asp-action="Update" asp-route-productId="@Model.Id" method="POST">
    
    @*<input type="hidden" asp-for="Id" value="@Model.Id" /> @* We must put I to Update page*@

    <div class="mb-3">
        <label for="Name" class="form-label">Name: </label>
        <input type="text" class="form-control" id="Name" asp-for="Name" value="@Model.Name" >
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Price: </label>
        <input type="number" class="form-control" id="Price" asp-for="Price" value="@Model.Price" >
    </div>

    <div class="mb-3">
        <label for="Stock" class="form-label">Stock: </label>
        <input type="number" class="form-control" id="Stock" asp-for="Stock" value="@Model.Stock" >
    </div>

    <div class="mb-3">
        <label for="Color" class="form-label">Color: </label>
        <input type="text" class="form-control" id="Color" asp-for="Color" value="@Model.Color" >
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for="IsPublish">
        <label class="form-check-label" for="flexCheckDefault">
            Do you want it to be published? 
        </label>
    </div>

    <button class="btn btn-primary" type="submit">Save Product</button>
</form>
